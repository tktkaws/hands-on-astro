---
const { article } = Astro.props;
---

<li class="c-card">
	<a href={`/articles/${article.slug}`}>
		<img src={`${article.coverImage.src}`} alt="" />
		<h2>
			{article.title}
		</h2>
	</a>
</li>
<style>
	.c-card {
		width: 300px;
		height: 300px;
		/* border: solid 1px; */
		/* border-radius: 1rem; */
	}
	.c-card a {
		width: 100%;
		height: 100%;
		display: block;
	}

	h2 {
		margin-top: 2rem;
		/* padding: 1rem; */
		font-size: 1.25rem;
		font-weight: bold;
	}
	h1 {
		font-size: 4rem;
		border-bottom: solid 2px;
	}

	img {
		width: 100%;
		height: auto;
		aspect-ratio: 16/9;
		object-fit: cover;
		border-radius: 1rem;
	}
	/* * {
		border: solid 1px magenta;
	} */
</style>
